{
  "name": "ethquad",
  "version": "0.1.0",
  "private": true,
  "author": "Luke Schoen <ltfschoen@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "14.x",
    "npm": "6.x",
    "yarn": "1.x"
  },
  "scripts": {
    "start": "DEBUG=app node ./server/server.js",
    "heroku-postbuild": "cd client && yarn && yarn install --only=dev --no-shrinkwrap && yarn run build",
    "client": "cd client && yarn && yarn start",
    "server": "yarn && nodemon server.js",
    "dev": "yarn && cd client && yarn && cd .. && yarn build:release:tsc && concurrently --kill-others-on-fail \"cd server && DEBUG=app yarn server\" \"yarn client\"",
    "build": "yarn build:release:tsc && yarn run build:release:webpack && yarn run build:release:ipfs",
    "build:release:webpack": "cd client && yarn && ./node_modules/.bin/webpack --mode production --config ./webpack.config.js",
    "build:release:tsc": "./node_modules/typescript/bin/tsc --project tsconfig.json",
    "build:release:ipfs": "node scripts/pinataUploadIpfs.js"
  },
  "dependencies": {
    "@pinata/sdk": "^1.1.10",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "typescript": "^3.9.6"
  },
  "devDependencies": {
    "concurrently": "^5.2.0"
  }
}
